<div class="iq-faq-item" data-faq-accordion>
  <div class="iq-faq-item-question">{{question}}</div>
  <div class="iq-faq-item-answer">
    {% if answer|render is not empty %}<div class="content">{{answer}}</div>{% endif %}
    {% if answer_additional|render is not empty %}<div class="additional" >{{answer_additional}}</div>{% endif %}
  </div>
</div>
